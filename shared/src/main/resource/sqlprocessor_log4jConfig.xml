<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<!-- This is the log4j config file that goes with the JUnit regression tests -->
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

  <appender name="default" class="org.apache.log4j.ConsoleAppender">
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d{yyyyMMddhhmmssSSS} [%t] %-5p %c - %m%n" />
    </layout>
  </appender>

  <appender name="logfile"
    class="org.apache.log4j.RollingFileAppender">
    <param name="File" value="/var/log/metapolis/sqlprocessor.log" />
    <param name="MaxFileSize" value="20MB" />
    <param name="MaxBackupIndex" value="10" />
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d{yyyyMMddhhmmssSSS} [%t] %-5p %c - %m%n" />
    </layout>
  </appender>

  <!-- Chainsaw homepage: http://logging.apache.org/log4j/docs/chainsaw.html 
    NOTE: you will have to modify the RemoteHost to point to the box 
    you are running Chainsaw on.
  -->
  <appender name="ChainsawAppender"
    class="org.apache.log4j.net.SocketAppender">
    <param name="Port" value="4445" />
    <param name="RemoteHost" value="localhost" />
  </appender>

  <category name="com.vulcan">
    <level value="info"/>
  </category>
  
  <root>
    <level value="info" />
    <appender-ref ref="logfile" />
    <appender-ref ref="default" />
  </root>

</log4j:configuration>
